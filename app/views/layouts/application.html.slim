doctype html
html
  head
    meta[name="viewport" content="width=device-width, initial-scale=1.0"]
    title
      = content_for?(:title) ? yield(:title) : 'Rails4 Archive Test Demo'
    meta name="description" content="#{content_for?(:description) ? yield(:description) : 'Rails4 X Test Demo'}"

    == csrf_meta_tags
  body
    header
      == render 'layouts/navigation'
    main[role="main"]
      == render 'layouts/messages'
      == yield
